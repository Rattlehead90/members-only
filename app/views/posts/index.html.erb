<h1>All posts</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <% if user_signed_in? %>
      <th>Author</th>
    <% end %>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <% if user_signed_in? %>
        <td><%= User.find_by(id:post.user_id).username %></td>
      <% end %>
    </tr>
  <% end %>
</table>
